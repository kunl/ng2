{
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "module": "es2015",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "noEmitHelpers": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "include": [
        "./src/**/*.module.ts",
        "./src/*.d.ts"
    ],
    "angularCompilerOptions": {
        "debug": true,
        "genDir": "ngc",
        "skipMetadataEmit": true
    },
    "compileOnSave": false,
    "buildOnSave": false
}