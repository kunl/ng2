{
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "module": "es2015",
        "moduleResolution": "node",
        "noEmitHelpers": false,
        "isolatedModules": false,
        "rootDir": "./src",
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": ["es2015", "dom"],
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "./src/**/*.module.ts",
        "./src/*.d.ts"
    ],
    "angularCompilerOptions": {
        "debuger": true,
        "genDir": "ngc"
    }
}