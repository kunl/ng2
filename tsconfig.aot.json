{
    "compilerOptions": {
        "declaration": false,
   
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,   
        "sourceMap": true,       
        "module": "es2015",
        "moduleResolution": "node",
       
        "rootDir": "./src",
        "noEmitHelpers": true,
        "target": "es5",  
         "typeRoots": [
            "node_modules/@types"
        ],
        "lib": ["es2015", "dom"],
        "suppressImplicitAnyIndexErrors": true
    },
    "files": [
        "./src/app.module.ts"
    ],
    "angularCompilerOptions": {
        "debuger": true,
        "genDir": "ngfactory"
    }
}

