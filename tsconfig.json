{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "sourceRoot": "src",
    "noEmitHelpers": false,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["es6", "dom"]
  },
  "exclude": [
    "node_modules",
    "ngfactory"
  ],
  "include": [
    "./src/**/*.module.ts",
    "./src/*.d.ts"
  ],
  "angularCompilerOptions": {
        "debug": false,
        "skipMetadataEmit": true
    },
  "compileOnSave": false,
  "buildOnSave": false
}