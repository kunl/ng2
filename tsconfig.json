{
  "compilerOptions": {
    "declaration": false,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noEmitHelpers": true
  },
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts"
  ]
}
